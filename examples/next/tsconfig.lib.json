{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"]
  },
  "exclude": [
    "jest.config.ts",
    "setup-tests.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": ["**/*.ts", "next-env.d.ts"]
}
